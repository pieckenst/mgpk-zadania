<Page
    x:Class="ComposerAndTheirWorks.Views.Pages.DataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ComposerAndTheirWorks.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ComposerAndTheirWorks.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DataPage"
    d:DataContext="{d:DesignInstance local:DataPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="750"
    d:DesignWidth="1200"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid >
        <DataGrid x:Name="datagrid1"  Margin="28,108,34,279" IsReadOnly="True"/>
        <Button x:Name="datagetter" Content="Получить данные" Margin="826,514,0,0" VerticalAlignment="Top" Click="Button_Click" Width="148"/>
        <Button Content="Отправить данные" Margin="826,554,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.616,2.388" Width="148" Click="Button_Click_1"/>
        <Button Content="Удалить данные" Margin="826,596,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.616,2.388" Width="148" Click="Button_Click_2"/>
        <TextBlock x:Name="lb1" Text="Ключ" HorizontalAlignment="Left" Margin="28,513,0,0"
        VerticalAlignment="Top" />
        <TextBlock x:Name="Lb2" Text="Имя" HorizontalAlignment="Left" Margin="190,517,0,0"
        VerticalAlignment="Top" />
        <TextBlock x:Name="lb3" Text="Фамилия" HorizontalAlignment="Left" Margin="366,516,0,0"
VerticalAlignment="Top" />
        <TextBlock x:Name="lb4" Text="Отчество" HorizontalAlignment="Left" Margin="547,516,0,0" VerticalAlignment="Top" />
        <TextBlock x:Name="lb5" Text="Жанр Музыки" HorizontalAlignment="Left" Margin="192,574,0,0"
VerticalAlignment="Top" />
        <TextBlock x:Name="lb6" Text="Количество произведений" HorizontalAlignment="Left" Margin="365,576,0,0"
VerticalAlignment="Top" RenderTransformOrigin="0.468,1.345" />
        <TextBlock x:Name="lb7" Text="Дата рождения" HorizontalAlignment="Left" Margin="547,577,0,0"
    VerticalAlignment="Top" RenderTransformOrigin="0.47,0.397" />
        <TextBlock x:Name="lb8" Text="Дата смерти" HorizontalAlignment="Left" Margin="190,649,0,0"
    VerticalAlignment="Top" RenderTransformOrigin="0.468,1.345" />
        <TextBlock x:Name="lb9" Text="Год рождения" HorizontalAlignment="Left" Margin="366,650,0,0"
    VerticalAlignment="Top" RenderTransformOrigin="0.47,0.397" />
        <TextBlock x:Name="lb10" Text="Год смерти" HorizontalAlignment="Left" Margin="547,657,0,0"
    VerticalAlignment="Top" RenderTransformOrigin="0.468,1.345" />
        <TextBox x:Name="Edit1" HorizontalAlignment="Left" Margin="27,535,0,0" TextWrapping="Wrap" Text="Для удаления данных вам нужно только сюда ввести ключ"
         VerticalAlignment="Top" Width="157" />
        <TextBox x:Name="Edit2" HorizontalAlignment="Left" Margin="190,533,0,0" TextWrapping="Wrap" Text="TextBox"
                 VerticalAlignment="Top" Width="157" />

        <TextBox x:Name="Edit3" HorizontalAlignment="Left" Margin="365,533,0,0" TextWrapping="Wrap" Text="TextBox"
                 VerticalAlignment="Top" Width="170" />
        <TextBox x:Name="Edit4" HorizontalAlignment="Left" Margin="547,533,0,0" TextWrapping="Wrap" Text="TextBox"
                 VerticalAlignment="Top" Width="170" />
        <TextBox x:Name="Edit5" HorizontalAlignment="Left" Margin="192,593,0,0" TextWrapping="Wrap" Text="TextBox"
                 VerticalAlignment="Top" Width="159" />

        <TextBox x:Name="Edit6" HorizontalAlignment="Left" Margin="365,596,0,0" TextWrapping="Wrap" Text="TextBox"
                 VerticalAlignment="Top" Width="177" />

        <TextBox x:Name="Edit7" HorizontalAlignment="Left" Margin="547,594,0,0" TextWrapping="Wrap" Text="TextBox"
            VerticalAlignment="Top" Width="158" />
        <TextBox x:Name="Edit8" HorizontalAlignment="Left" Margin="190,669,0,0" TextWrapping="Wrap" Text="TextBox"
            VerticalAlignment="Top" Width="151" />

        <TextBox x:Name="Edit9" HorizontalAlignment="Left" Margin="366,673,0,0" TextWrapping="Wrap" Text="TextBox"
            VerticalAlignment="Top" Width="158" />
