        <Button Content="🔎" Margin="28,21,0,0" VerticalAlignment="Top" Height="53" Width="61" Click="Button_Click_3"/>
        <RadioButton x:Name="genre1" Content="Cочетание Электронной и Классической музыки" Margin="415,27,0,0" VerticalAlignment="Top" Click="RadioButton_Click" GroupName="FilterGroup"/>
        <RadioButton x:Name="genre2" Content="Классическая музыка" Margin="415,64,0,0" VerticalAlignment="Top" Cursor="" GroupName="FilterGroup" Click="genre2_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="415,6,0,0" TextWrapping="Wrap" Text="Фильтрация по жанру" VerticalAlignment="Top"/>
        <RadioButton x:Name="genre3" Content="Современная классическая музыка" Margin="780,27,0,0" VerticalAlignment="Top" GroupName="FilterGroup" Checked="genre3_Checked"/>




    </Grid>
</Page>
