<Page
    x:Class="ComposerAndTheirWorks.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ComposerAndTheirWorks.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="750"
    d:DesignWidth="1200"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid >
        <Button x:Name="datagetter" Content="Получить данные" Margin="765,545,0,0" VerticalAlignment="Top" Click="Button_Click" Width="148"/>
        <Button Content="Отправить данные" Margin="765,583,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.616,2.388" Width="149" Click="Button_Click_1"/>
        <Button Content="Удалить данные" Margin="765,625,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.616,2.388" Width="148" Click="Button_Click_2"/>
        <TextBlock x:Name="lb1" Text="Код произведения" HorizontalAlignment="Left" Margin="28,513,0,0"
        VerticalAlignment="Top" />
        <TextBlock x:Name="Lb2" Text="Название" HorizontalAlignment="Left" Margin="27,638,0,0"
        VerticalAlignment="Top" />
        <TextBlock x:Name="lb3" Text="Дата создания" HorizontalAlignment="Left" Margin="189,514,0,0"
VerticalAlignment="Top" />
        <TextBlock x:Name="lb4" Text="Код композитора" HorizontalAlignment="Left" Margin="190,571,0,0" VerticalAlignment="Top" />
        <TextBlock x:Name="lb5" Text="Имя и фамилия композитора" HorizontalAlignment="Left" Margin="365,514,0,0"
VerticalAlignment="Top" />
        <TextBox x:Name="Edit1" HorizontalAlignment="Left" Margin="27,535,0,0" TextWrapping="Wrap" Text="Для удаления данных вам нужно только сюда ввести ключ"
                 VerticalAlignment="Top" Width="157" />
        <TextBox x:Name="Edit2" HorizontalAlignment="Left" Margin="28,654,0,0" TextWrapping="Wrap" Text="TextBox"
                 VerticalAlignment="Top" Width="157" />

        <TextBox x:Name="Edit3" HorizontalAlignment="Left" Margin="190,531,0,0" TextWrapping="Wrap" Text="TextBox"
                 VerticalAlignment="Top" Width="170" />
        <TextBox x:Name="Edit4" HorizontalAlignment="Left" Margin="190,591,0,0" TextWrapping="Wrap" Text="TextBox"
                 VerticalAlignment="Top" Width="170" />
        <TextBox x:Name="Edit5" HorizontalAlignment="Left" Margin="365,533,0,0" TextWrapping="Wrap" Text="TextBox"
                 VerticalAlignment="Top" Width="159" />
        <DataGrid x:Name="datagrid1"  Margin="27,89,43,258" IsReadOnly="True"/>
        <TextBox x:Name="searchbox" HorizontalAlignment="Left" Margin="94,21,0,0" TextWrapping="Wrap" Text="Поиск по базе данных" VerticalAlignment="Top" Width="166"/>
        <Button Content="🔎" Margin="28,21,0,0" VerticalAlignment="Top" Height="53" Width="61" Click="Button_Click_3"/>


    </Grid>
</Page>
