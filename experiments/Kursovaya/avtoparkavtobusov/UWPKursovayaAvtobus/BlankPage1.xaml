        <TextBlock x:Name="lb4" Text="Voditel" HorizontalAlignment="Left" Margin="16,174,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="lb5" Text="Model_Avtobusa" HorizontalAlignment="Left" Margin="16,232,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="lb6" Text="Vremya_Proezda" HorizontalAlignment="Left" Margin="17,285,0,0" VerticalAlignment="Top" Foreground="{ThemeResource DefaultTextForegroundThemeBrush}"/>

        <TextBox x:Name="Editor1" HorizontalAlignment="Left" Margin="17,33,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="Editor2" HorizontalAlignment="Left" Margin="17,83,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="190"/>
