        <TextBox x:Name="Editor4" HorizontalAlignment="Left" Margin="16,200,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="Editor5" HorizontalAlignment="Left" Margin="16,253,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="Editor6" HorizontalAlignment="Left" Margin="16,307,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="190"/>
        <Button x:Name="UpdateTransportTable" Content="Обновить Данные" Margin="212,83,0,0" VerticalAlignment="Top" Height="38" Width="187" Click="UpdateTransportTable_Click"/>
        <Button x:Name="ClickSendDb" Content="Отправить данные в БД" Margin="212,24,0,0" VerticalAlignment="Top" Width="187" Height="37" Click="ClickSendDb_Click"/>
    </Grid>
</Page>
