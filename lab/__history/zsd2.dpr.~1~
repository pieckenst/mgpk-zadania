program zsd2;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var a,b,c,d ,koren1,koren2:real;
var selector:string;

begin
 writeln('kvadratnoe uravnenie reshaem ) - formuli b^2-4ac , i korni -b + sqrt d / 2a');
 writeln('chitaem a,b,c');
 readln(a,b,c);
 d:=b*b-4*a*c;



 if d=0 then begin
   writeln('discriminant =  0, koren 1');
   koren1:=b+sqrt(d)/2*a;

 end;
 if d>0 then begin
  writeln(d);
  koren1:=b+sqrt(d)/2*a;
  koren2:=b-sqrt(d)/2*a;

 end;
 case true of
   d<0:writeln('discriminant <0 - kornei net');
   d=0:writeln(d,koren1);
   d>0:writeln(d,koren1,koren2);
 end;
 sleep(2500);
end.
