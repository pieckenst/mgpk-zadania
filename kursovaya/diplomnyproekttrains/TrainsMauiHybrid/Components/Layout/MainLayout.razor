@using TrainsMauiHybrid.Helpers
@inherits LayoutComponentBase
@inject EventHandleHelper themeHelper

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    
    
    
    
   


    <MudDrawer  @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>

            <MudNavLink Match="NavLinkMatch.All" IconColor="Color.Inherit" Href="/"> </MudNavLink>
        </MudDrawerHeader>

        <NavMenu/>
        <MudSpacer/>
        <MudToggleIconButton ToggledChanged="@ToggleDarkMode" Icon="@Icons.Material.Filled.LightMode"
                             ToggledIcon="@Icons.Material.Filled.DarkMode"></MudToggleIconButton>
    </MudDrawer>

    <MudMainContent>
        <MudContainer Class="pt-1">
            @Body
            
            
        </MudContainer>
    </MudMainContent>
    <MudScrollToTop Visible="true" OnClick="DrawerToggle" TopOffset="400" Style="z-index:2000;">
                        <MudFab  Color="Color.Primary"  Label="Меню" Icon="@Icons.Material.Filled.Notes"  />
                    </MudScrollToTop>

</MudLayout>


