@code {

    [Inject]
    protected SecurityService Security { get; set; }
    [Parameter]
    public long PunktKey { get; set; }

    protected override async Task OnInitializedAsync()
    {
        promezhutochinyePunkty = await DiplomnyProektService.GetPromezhutochinyePunktyByPunktKey(PunktKey);
    }
    protected bool errorVisible;
    protected TrainsMauiHybrid.Models.PromezhutochinyePunkty promezhutochinyePunkty;

    protected async Task FormSubmit()
    {
        try
        {
            await DiplomnyProektService.UpdatePromezhutochinyePunkty(PunktKey, promezhutochinyePunkty);
            DialogService.Close(promezhutochinyePunkty);
        }
        catch (Exception ex)
        {
            errorVisible = true;
        }
    }

    protected async Task CancelButtonClick(MouseEventArgs args)
    {
        DialogService.Close(null);
    }

}