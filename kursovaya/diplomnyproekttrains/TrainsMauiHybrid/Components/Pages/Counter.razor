@page "/counter"


<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<RadzenButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount">Click me</RadzenButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
