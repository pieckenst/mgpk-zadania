@page "/add-marshuti"
@using TrainsMauiHybrid.Services
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject DialogService DialogService
@inject ContextMenuService ContextMenuService
@inject TooltipService TooltipService
@inject NotificationService NotificationService

@inject DiplomnyProektService DiplomnyProektService

<PageTitle>Добавить информацию о маршрутах</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Ошибка сохранения информации</RadzenAlert>
        <RadzenTemplateForm TItem="TrainsMauiHybrid.Models.Marshuti" Data="@marshuti" Visible="@(marshuti != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Номер маршрута" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@marshuti.Nomer_Marshuta" Name="Nomer_Marshuta" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Nomer_Marshuta" Text="Номер маршрута необходимо заполнить!" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Начальный пункт маршрута" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@marshuti.Nachalni_Punkt" Name="Nachalni_Punkt" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Nachalni_Punkt" Text="Начальный пункт маршрута необходимо заполнить!" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Промежуточный пункт маршрута" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@marshuti.Mid_Punkt" Name="Mid_Punkt" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Mid_Punkt" Text="Промежуточный пункт маршрута необходимо заполнить!" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Конечный пункт маршрута" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@marshuti.Konechni_Punkt" Name="Konechni_Punkt" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Konechni_Punkt" Text="Конечный пункт маршрута необходимо заполнить!" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Сотрудник" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@employeesForEmpNum" TextProperty="Surname" ValueProperty="Num" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@marshuti.Emp_Num" Name="Emp_Num"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Модель состава вагонов" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@trainsForModelTrainKey" TextProperty="Model_Sostava_Vagonov" ValueProperty="NumVagona" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@marshuti.ModelTrainKey" Name="ModelTrainKey"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Время проезда" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@marshuti.Vremya_Proezda" Name="Vremya_Proezda" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Vremya_Proezda" Text="Время проезда необходимо заполнить!" />
                  </Helper>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Сохранить" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Отмена" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

@code {

    protected override async Task OnInitializedAsync()
    {
        marshuti = new TrainsMauiHybrid.Models.Marshuti();

        employeesForEmpNum = await DiplomnyProektService.GetEmployees();

        trainsForModelTrainKey = await DiplomnyProektService.GetTrains();
    }
    protected bool errorVisible;
    protected TrainsMauiHybrid.Models.Marshuti marshuti;

    protected IEnumerable<TrainsMauiHybrid.Models.Employee> employeesForEmpNum;

    protected IEnumerable<TrainsMauiHybrid.Models.Train> trainsForModelTrainKey;

    protected async Task FormSubmit()
    {
        try
        {
            await DiplomnyProektService.CreateMarshuti(marshuti);
            DialogService.Close(marshuti);
        }
        catch (Exception ex)
        {
            errorVisible = true;
        }
    }

    protected async Task CancelButtonClick(MouseEventArgs args)
    {
        DialogService.Close(null);
    }
}
