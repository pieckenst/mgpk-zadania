@page "/add-bilety"
@using TrainsMauiHybrid.Services
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject DialogService DialogService
@inject ContextMenuService ContextMenuService
@inject TooltipService TooltipService
@inject NotificationService NotificationService

@inject DiplomnyProektService rsncra_DiplomnyProektService

<PageTitle>Добавить билеты</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Bilety</RadzenAlert>
        <RadzenTemplateForm TItem="TrainsMauiHybrid.Models.Bilety" Data="@bilety" Visible="@(bilety != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Номер билета" Component="Nomer_Bileta" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@bilety.Nomer_Bileta" Name="Nomer_Bileta" />
                    <RadzenRequiredValidator Component="Nomer_Bileta" Text="Номер билета необходимо заполнить!" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Маршрут" Component="Marshuti" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@marshutisForNomerMarshutaKey" TextProperty="Nachalni_Punkt" ValueProperty="Nomer_Marshuta" AllowClear=true
                         Placeholder="Выберите маршрут" style="display: block; width: 100%" @bind-Value="@bilety.Nomer_MarshutaKey" Name="Nomer_MarshutaKey"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Стоимость" Component="Stoimost" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@bilety.Stoimost" Name="Stoimost" />
                    <RadzenRequiredValidator Component="Stoimost" Text="Стоимость необходимо заполнить!" />
                </RadzenColumn>
            </RadzenRow>
           <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Конечная остановка пассажира" Component="Konechnaya_Ostanovka" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@bilety.Konechnaya_Ostanovka" Name="Konechnaya_Ostanovka" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Сохранить" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Отмена" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

@code {

    protected override async Task OnInitializedAsync()
    {
        bilety = new TrainsMauiHybrid.Models.Bilety();

        marshutisForNomerMarshutaKey = await rsncra_DiplomnyProektService.GetMarshutis();
    }
    protected bool errorVisible;
    protected TrainsMauiHybrid.Models.Bilety bilety;

    protected IEnumerable<TrainsMauiHybrid.Models.Marshuti> marshutisForNomerMarshutaKey;

    protected async Task FormSubmit()
    {
        try
        {
            await rsncra_DiplomnyProektService.CreateBilety(bilety);
            DialogService.Close(bilety);
        }
        catch (Exception ex)
        {
            hasChanges = ex is Microsoft.EntityFrameworkCore.DbUpdateConcurrencyException;
            canEdit = !(ex is Microsoft.EntityFrameworkCore.DbUpdateConcurrencyException);
            errorVisible = true;
        }
    }

    protected async Task CancelButtonClick(MouseEventArgs args)
    {
        DialogService.Close(null);
    }


    protected bool hasChanges = false;
    protected bool canEdit = true;
}
