        <TextBox x:Name="Edit5" HorizontalAlignment="Left" Margin="141,181,0,0" TextWrapping="Wrap"
                 Text="TextBox" VerticalAlignment="Top" Width="94" MouseDoubleClick="Edit6_MouseDown" />
        <ui:Button Content="Отправить данные в БД" Margin="10,307,0,0" VerticalAlignment="Top" Height="32" Width="201"
                Click="Button_Click" />
        <ui:Button x:Name="UpdateGrid" Content="Обновить DataGrid" Margin="10,385,0,0" VerticalAlignment="Top" Width="201" Click="UpdateGrid_Click" />
        <ui:Button x:Name="SaleUpdateDB" Content="Обновить Данные о продажах" Margin="10,347,0,0" VerticalAlignment="Top"
