        <TextBlock x:Name="lab6" Text="Nomer_MarshutaKey" HorizontalAlignment="Left" Margin="10,190,0,0"
            VerticalAlignment="Top" />
        <DataGrid x:Name="dataGrid2" Margin="325,244,14,22" >
            
